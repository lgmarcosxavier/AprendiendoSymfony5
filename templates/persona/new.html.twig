{% extends 'base.html.twig' %}

{% block title %}New Persona{% endblock %}

{% block body %}
    <h1>Create new Persona</h1>

    {#{{ include('persona/_form.html.twig') }}#}

    {% for message in app.flashes('nota') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <pre>{{ app.request.get('_route') }}</pre>
    <form action="{{ path('validar_persona') }}" method="post">
        <input type="text" name="nombre" id="name"/>
        <input type="submit" value="Enviar" />
    </form>

    <a href="{{ path('persona_index') }}">back to list</a>
{% endblock %}
